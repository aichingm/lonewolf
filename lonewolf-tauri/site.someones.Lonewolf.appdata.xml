<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>site.someones.Lonewolf</id>

  <name>Lonewolf</name>
  <summary>Organize your tasks</summary>
  <developer_name>Mario Aichinger</developer_name>

  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <url type="homepage">https://github.com/aichingm/Lonewolf</url>
  <url type="bugtracker">https://github.com/aichingm/Lonewolf/issues</url>
  <!-- add when updating to gnome sdk 45 <url type="vcs-browser">https://github.com/aichingm/Lonewolf</url>-->

  <supports>
    <internet>offline-only</internet>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <recommends>
    <display_length compare="ge">1000</display_length>
  </recommends>

  <description>
    <p>
      Lonewolf is a productivity application based on the principles of Kanban.
    </p>
    <ul>
      <li>Manages lists</li>
      <li>Create cards</li>
      <li>Organize cards with lables</li>
      <li>Set due dates for yourself</li>
      <li>Add attchments</li>
      <li>Write descriptions of your tasks in markdown</li>
      <li>Split up larger tasks with check lists</li>
      <li>Keep your thoughts by adding comments for your future self</li>
    </ul>
  </description>

  <launchable type="desktop-id">site.someones.Lonewolf.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/aichingm/lonewolf/master/assets/screenshot_light_main.png</image>
      <caption>Main window (light mode)</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/aichingm/lonewolf/master/assets/screenshot_dark_main.png</image>
      <caption>Main window (dark mode)</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/aichingm/lonewolf/master/assets/screenshot_light_card.png</image>
      <caption>Card Dialog</caption>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/aichingm/lonewolf/master/assets/screenshot_light_about.png</image>
      <caption>About window</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release type="stable" version="1.3.0" date="2024-06-03">
      <description>
        <ul>
          <li>New option to follow the systems dark mode preferences</li>
          <li>The Icon now has a background to make it more visible on dark backgrounds</li>
          <li>Saving unsaved changes is now a singe click</li>
        </ul>
      </description>
    </release>
    <release type="stable" version="1.2.0" date="2024-01-18">
      <description>
        <ul>
          <li>Window position and size are now stored between opening and closing the app</li>
          <li>Bug fix: long titles are breaking the layout</li>
        </ul>
      </description>
    </release>
    <release type="stable" version="1.1.0" date="2023-10-21">
      <description>
        <ul><li>Add keyboard shortcuts (for: new, open, save)</li></ul>
      </description>
    </release>
    <release type="stable" version="1.0.4" date="2023-10-05">
      <description>
        <ul><li>Bug fix: Icons are not always displayed</li></ul>
      </description>
    </release>
    <release type="stable" version="1.0.0" date="2023-09-25">
      <description>
        <p>Lonewolf's first release</p>
      </description>
    </release>
  </releases>
  <content_rating type="oars-1.1"/>
</component>
